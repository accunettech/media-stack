CONTAINER_HOME=/path/to/media-pipeline
MEDIA_DIR=/ext-drive/media   # Replace with your media location

OPENVPN_USER=vpn_service_username        # Replace with your VPN service username (not login credentials - OpenVPN credentials)
OPENVPN_PASSWORD=vpn_service_password    # Replace with your VPN service password (not login credentials - OpenVPN credentials)

VPN_WATCHDOG_ENABLED=false               # Enable if you want an alert to be sent if VPN goes down. Requires modification to /scripts/vpn_watch.py

INDEXERS=1337x,EZTV,TorrentGalaxyClone,ThePirateBay   # Add torrent or usenet indexers here. Only torrent indexers listed here since free

# These can be added to or removed from Prowlarr (http://{docker_host}:9696)
# Per-indexer overrides (names are normalized: letters/digits only, uppercased)
# Example below assumes NZBGEEK indexer is being used. Not added by default since not free. 
# Consider using NZBGeek (~$1/month) for Usenet Indexer + Newshosting.com (~$10/month) for Usenet Server
#IDX_NZBGEEK__APIKEY=your_nzbgeek_key
#IDX_NZBGEEK__BASEURL=https://nzbgeek.info

# Optional fallbacks if a specific indexer override is missing:
#USENET_DEFAULT_APIKEY=
#USENET_DEFAULT_BASEURL=

# Credentials for all apps in the stack will be set to these
UI_USER=user
UI_PASS=password

CREATE_PROXY=true  #Required if CloudFlare rejects some indexers

CONF_HOME=${CONTAINER_HOME}/conf
SCRIPTS_HOME=${CONTAINER_HOME}/scripts
MOVIES_DIR=${MEDIA_DIR}/movies
SHOWS_DIR=${MEDIA_DIR}/shows
DOWNLOADS_DIR=${MEDIA_DIR}/downloads
